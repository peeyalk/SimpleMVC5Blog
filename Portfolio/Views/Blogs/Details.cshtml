@model Portfolio.Data.Blog

@{
    ViewBag.Title = "Details";
    ViewBag.H1 = @Model.Title;
    ViewBag.Span = String.Format("Posted by Long Nguyen on {0}", @Model.Created.ToShortDateString());
}

<style>
    .intro-header {
        background-image: url("../../Content/Template/img/about-bg.jpg");
    }
</style>

<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <p>@Html.Raw(Model.Body)</p>
            </div>
        </div>
    </div>
</article>

<hr />

<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div id="disqus_thread"></div>
            <script src="~/Scripts/Disqus/Disqus.js"></script>
            <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
        </div>
    </div>
</div>
@if (ViewContext.HttpContext.User.IsInRole("Admin"))
{
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    <br />
    @Html.ActionLink("Delete", "Delete", new { id = Model.Id })
}
<br />

@Html.ActionLink("Back to List", "Index")
